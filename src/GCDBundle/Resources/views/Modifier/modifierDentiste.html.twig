{%extends "GCDBundle::layout.html.twig"%}

{%block container %}
   {{form_start(form,{ 'attr': {'class': 'form-signin','method' : 'POST'}})}}
            <h2 class="alert-danger">Iil faut remplir tous les champs!!</h2>
    <div id="gauche" class="col-sm-6">  
            <div class="mod">
                <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}" onclick='modifier_nom();'/> 
          {{form_widget(form.nomDentiste, { 'attr': {'class': 'modif-input','disabled':''}})}}
            </div>
                       <div class="mod">
                          

            <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}"onclick='modifier_prenom();'/> 
{{form_widget(form.prenomDentiste, { 'attr': {'class': 'modif-input','disabled':''}})}}                       </div>
                        <div class="mod">

            <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}"onclick='modifier_email();'/> 
{{form_widget(form.emailDentiste, { 'attr': {'class': 'modif-input','disabled':''}})}}                      </div>
                        <div class="mod">

            <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}"onclick='modifier_pw();'/> 
{{form_widget(form.password, { 'attr': {'class': 'modif-input','disabled':''}})}}         </div>
     </div>
     <div id="droite" class="col-sm-6">
    
     <div class="mod">

            <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}"onclick='modifier_teld();'/> 
{{form_widget(form.telDentiste, { 'attr': {'class': 'modif-input','disabled':''}})}}         </div>
    </div>
    
    <div class="mod">

            <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}"onclick='modifier_adrd();'/> 
{{form_widget(form.adresseDentiste, { 'attr': {'class': 'modif-input','disabled':''}})}}                      </div>
    
   
    <div class="mod">

            <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}"onclick='modifier_adrc();'/> 
{{form_widget(form.adresseCabinet, { 'attr': {'class': 'modif-input','disabled':''}})}}                      </div>
   
   <div class="mod">

          <img class="img-modifier" src="{{ asset('bundles/gcd/images/modifier.png') }}"onclick='modifier_telc();'/> 
{{form_widget(form.telCabinet, { 'attr': {'class': 'modif-input','disabled':''}})}}                      </div>
             <!--<button id="connecter" class="btn btn-lg btn-primary btn-block" type="submit">Enregistrer</button>-->
  </div>
             {% for child in form.sexe %}
         
      <span class="radio inline" style="display: none;">  
      
      {{ form_widget(child) }}
      <span>{{ form_label(child)}} </span>
      </span>
        {% endfor %}
             {{form_widget(form.inscrire, { 'attr': {'class': 'btn btn-lg btn-primary btn-block','id' : 'connecter','value':'Enregistrer'}})}}
     </div>
    </div>
  {{form_end(form)}}
{%endblock%}


{%block javascripts %}

<script>
function modifier_nom (){
    document.getElementById("gcdbundle_dentiste_nomDentiste").removeAttribute("disabled");
    document.getElementById("gcdbundle_dentiste_nomDentiste").value="";
}
function modifier_prenom(){
    document.getElementById("gcdbundle_dentiste_prenomDentiste").removeAttribute("disabled");
}
function modifier_email (){
    document.getElementById("gcdbundle_dentiste_emailDentiste").removeAttribute("disabled");
}
function modifier_pw(){
    document.getElementById("gcdbundle_dentiste_password").removeAttribute("disabled");
}
function modifier_teld(){
    document.getElementById("gcdbundle_dentiste_telDentiste").removeAttribute("disabled");
}
function modifier_adrd(){
    document.getElementById("gcdbundle_dentiste_adresseDentiste").removeAttribute("disabled");
}
function modifier_adrc(){
    document.getElementById("gcdbundle_dentiste_adresseCabinet").removeAttribute("disabled");
}
function modifier_telc(){
    document.getElementById("gcdbundle_dentiste_telCabinet").removeAttribute("disabled");
}
</script>
  {%endblock%}
  
  
  
  
  
  
  